<h1><%= @book.title %></h1>
<% if @authors.size == 1 %>
  <h3>Author:</h3>
  <h2><%= @authors.first.name %></h2>
<% else %>
  <h3>Authors:</h3>
  <%= @authors.each do |author| %>
    <h2><%= link_to(author.name, author_path(author.id)) %></h2>
  <% end %>
<% end %>
<p>page count: <%= @book.page_count %></p>
<p>publish_year: <%= @book.publish_year %></p>
<h2>Reviews:</h2>
<% @reviews.each do |review| %>
  <p>Title: <%= review.title %></p>
  <p>User: <%=review.user.name%></p>
  <p>Rating: <%= review.rating %></p>
  <p><%= review.text %></p>
<% end %>
<%= button_to "Delete Book",  book_path(@book), method: :delete, data: {confirm: "Are you sure?"}  %>

<%= link_to 'Add a Review', new_book_review_path(@book.id) %> |
